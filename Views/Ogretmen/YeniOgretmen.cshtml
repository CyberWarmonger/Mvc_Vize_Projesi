
@{
    ViewBag.Title = "YeniOgretmen";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">

    <div>
        <label>Ogretmen Bolumu</label>
        @Html.DropDownList("OgretmenBolum", new SelectList(new List<SelectListItem>
{
new SelectListItem { Text = "Ogretmen Bolumunu Seçiniz", Value = "" },
new SelectListItem { Text = "Bilgisayar", Value = "Bilgisayar" },
new SelectListItem { Text = "Makine", Value = "Makine" },
}, "Value", "Text"), new { @class = "form-control" })
    </div>

    <div>
        <label>Ogretmen Adi</label>
        <input type="text" class="form-control" name="OgretmenAd" />
    </div>
    <div>
        <label>Ogretmen Soyadi</label>
        <input type="text" class="form-control" name="OgretmenSoyad" />
    </div>
    <div>
        <label>Ogretmen Giris Tarihi</label>
        <input type="date" class="form-control" name="OgretmenGiris" />
    </div>
    <div>
        <label>Ogretmen Cikis Tarihi</label>
        <input type="date" class="form-control" name="OgretmenCikis" />
    </div>
    <div style="margin-top:21px">
        <button class="btn btn-info">Ogretmen Ekle</button>
    </div>
</form>
